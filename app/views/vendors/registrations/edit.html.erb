<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <br><br><br>
  
  <% if resource.errors.any? %>
      <h2><%= resource.errors.count %>ヶ所記載に誤りがございます。</h2>
      <h3>下記の指示に従って、訂正をよろしくお願いいたします。</h3>
  <% end %>
  
  <br><br><br>
  
  <br>
  <h1>編集画面</h1>
  <br>
  <table class="table">
    <tr>
      <th>企業名<span class="text-danger"> (必須)</span></th>
      <td> <%= f.text_field :name, :size=>"150", autocomplete: "name"  %></td>
    </tr>
    <tr>
      <th>メールアドレス<span class="text-danger"> (必須)</span></th>
      <td> <%= f.email_field :email, :size=>"150", autofocus: true, autocomplete: "email"  %></td>
    </tr>
    <tr>
      <th>現在のパスワード<span class="text-danger"> (必須)</span></th>
      <td> <%= f.password_field :current_password, :size=>"150", autocomplete: "new-password"  %></td>
    </tr>
    <tr>
      <th>新しいパスワード<span class="text-danger"> (必須)</span></th>
      <td> <%= f.password_field :password, :size=>"150", autocomplete: "new-password"  %></td>
    </tr>
    <tr>
      <th>確認用パスワード<span class="text-danger"> (必須)</span></th>
      <td> <%= f.password_field :password_confirmation, :size=>"150", autocomplete: "new-password"  %></td>
    </tr>
  </table>
  <div class="actions">
    <%= f.submit "更新" %>
  </div>
  <%= link_to "一覧画面へ", houses_path %>
<% end %>

