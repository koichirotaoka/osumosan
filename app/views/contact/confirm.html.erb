<div class="top-wrapper">
    <div class="container">
      <div class="page-header">
        <h1>お問い合わせ確認画面</h1>
      </div>
       
      <%= form_for @contact, :url => contact_thanks_path do |f| %>
        <table class="table">
          <tr>
            <th>名前</th>
            <td>
              <%= f.hidden_field :name %>
              <%= @contact.name %>
            </td>
          </tr>
      
          <tr>
            <th>メールアドレス</th>
            <td>
              <%= f.hidden_field :email %>
              <%= @contact.email %>
            </td>
          </tr>
      
          <tr>
            <th>問い合わせ内容</th>
            <td>
              <%= f.hidden_field :message %>
              <%= simple_format(@contact.message) %>
            </td>
          </tr>
        </table>
        <%= f.submit '送信', :class => 'btn btn-primary' %>
        <%= link_to "もどる", contact_path , class: 'btn btn-warning'%>
      <% end %>
  </div>
</div>