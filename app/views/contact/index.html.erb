<div class="top-wrapper">
    <div class="container">
      <div class="page-header">
          <h1>お問い合わせ画面</h1>
      </div>
      <%= form_for @contact, :url => contact_confirm_path do |f| %>
       
        <% if @contact.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <strong>入力内容にエラーがあります</strong>
            <ul>
              <% @contact.errors.each do |attr, msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
       
        <table class="table">
          <tr>
            <th>名前<span class="text-danger"> (必須)</span></th>
            <td><%= f.text_field :name, :size=>"150" %></td>
          </tr>
      
          <tr>
            <th>メールアドレス<span class="text-danger"> (必須)</span></th>
            <td><%= f.text_field :email, :size=>"150" %></td>
          </tr>
      
          <tr>
            <th>問い合わせ内容 (必須)</th>
            <td><%= f.text_area :message, :size=>"150" %></td>
          </tr>
      
        </table>
        <%= f.submit '確認', class: 'btn btn-primary' %>
      <% end %>
  </div>
</div>