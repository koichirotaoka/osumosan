<head>
    <title>Osumosan</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="./font-awesome.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <script type="text/javascript" src="jquery.js"></script>
    <script type="text/javascript" src="jquery.ah-placeholder.js"></script>
</head>

<div class="top-wrapper">
  <div class="container">
    <h1>新規物件投稿画面</h1>
    <br /><br />
    <%= form_with(model: @house, local: true ,url: choose_new_or_edit) do |form| %>
      <% if @house.errors.any? %>
        <div id="error_explanation">
          <h2><%= @house.errors.count %>ヶ所記載に誤りがございます。</h2>
          <h3>下記の指示に従って、訂正をよろしくお願いいたします。</h3>
          <br /><br />
          <ul>
            <% @house.errors.full_messages.each do |msg| %>
              <h4>"<%= msg %>"</h4>
            <% end %>
          </ul>
        </div>
        <br /><br />
      <% end %>
      <table class="table">
          <tr>
            <th>物件<span class="text-danger"> (必須)</span></th>
            <td><%= form.text_field :title, :size=>"150" , :placeholder => "(例)GA technologies"%></td>
          </tr>
      
          <tr>
            <th>所在地 <span class="text-danger"> (必須)</span></th>
            <td><%= form.text_field :location, :size=>"150", :placeholder => "(例)東京都"  %></td>
          </tr>
          
          <tr>
            <th>最寄り駅 <span class="text-danger"> (必須)</span></th>
            <td><%= form.text_field :access, :size=>"150", :placeholder => "(例)恵比寿"  %>駅</td>
          </tr>
          
          <tr>
            <th>家賃 <span class="text-danger"> (必須)</span></th>
            <td><%= form.text_field :rent, :size=>"150", :placeholder =>"(例)100000"  %>円</td>
          </tr>
          
          <tr>
            <th>敷金 <span class="text-danger"> (必須)</span></th>
            <td><%= form.text_field :deposit, :size=>"150", :placeholder =>"(例)100000"%>円</td>
          </tr>
          
           <tr>
            <th>礼金 <span class="text-danger"> (必須)</span></th>
            <td><%= form.text_field :gratuityfee, :size=>"150", :placeholder =>"(例)100000" %>円</td>
          </tr>
          
           <tr>
            <th>専有面積 <span class="text-danger"> (必須)</span></th>
            <td><%= form.text_field :area, :size=>"150", :placeholder =>"(例)50"  %>ｍ²</td>
          </tr>
          
           <tr>
            <th>築年数 <span class="text-danger"> (必須)</span></th>
            <td><%= form.text_field :age, :size=>"150", :placeholder =>"(例)5"  %>年</td>
          </tr>
          
           <tr>
            <th>間取り <span class="text-danger"> (必須)</span></th>
            <td><%= form.text_field :layout, :size=>"150", :placeholder =>"(例)1LDK"  %></td>
          </tr>
          
           <tr>
            <th>主要採光面 <span class="text-danger"> (必須)</span></th>
            <td><%= form.text_field :lightning, :size=>"150", :placeholder => "(例)南向き"  %></td>
          </tr>
          
           <tr>
            <th>設備 <span class="text-danger"> (必須)</span></th>
            <td><%= form.text_field :service, :size=>"150", :placeholder =>"(例)バス・トイレ別"  %></td>
          </tr>
          
          <tr>
            <th>ハッシュタグ <span class="text-danger"> (必須)</span></th>
            <td><%= form.text_field :hashtag, :size=>"150", :placeholder =>"(例)#おしゃれ"%></td>
          </tr>
          
          <tr>
            <th>写真<span class="text-danger"> (必須)</span></th>
            <td><%= image_tag(@house.image.url) if @house.image.url %><%= form.file_field :image%></td>
          </tr>
        </table>
      <%= form.submit  "投稿する" , class: 'btn btn-success'%>
    <% end %>
    <%= link_to "もどる", houses_path , class: 'btn btn-warning'%>
  </div>
</div>

<script>
$(function() {
$('[placeholder]').ahPlaceholder({
    placeholderColor : 'silver',
    placeholderAttr : 'placeholder',
    likeApple : false
    });
});
</script>