<head>
    <title>Osumosan</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="./font-awesome.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <script type="text/javascript" src="jquery.js"></script>
    <script type="text/javascript" src="jquery.ah-placeholder.js"></script>
</head>

<div class="top-wrapper">
  <div class="container">
    <h1>新規物件投稿画面</h1>
    <br /><br />
    <%= form_with(model: @house, local: true ,url: choose_new_or_edit) do |form| %>
      <% if @house.errors.any? %>
        <div id="error_explanation">
          <h2><%= @house.errors.count %>ヶ所記載に誤りがございます。</h2>
          <h3>下記の指示に従って、訂正をよろしくお願いいたします。</h3>
          <br /><br />
          <ul>
            <% @house.errors.full_messages.each do |msg| %>
              <h4>"<%= msg %>"</h4>
            <% end %>
          </ul>
        </div>
        <br /><br />
      <% end %>
      
      <div class="title">
        <%= form.label :"物件名：" %>
        <%= form.text_field :title, :placeholder => "(例)GA technologies"%>
      </div>
      <br /><br />
      <div class="image">
        <%= form.label :"写真：" %>
        <%= image_tag(@house.image.url) if @house.image.url %>
        <%= form.file_field :image,style: "display:inline-block;"%>
      </div>
      <br /><br />
      <div class="location">
        <%= form.label :"所在地：" %>
        <%= form.text_field :location, :placeholder => "(例)東京都"  %>
      </div>
      <br /><br />
      <div class="access">
        <%= form.label :"最寄り駅：" %>
        <%= form.text_field :access, :placeholder => "(例)恵比寿"  %>駅
      </div>
      <br /><br />
      <div class="rent">
        <%= form.label :"家賃：" %>
        <%= form.text_field :rent, :placeholder => "(例)100000"  %>円
      <br /> <br />
      <div class="deposit">
        <%= form.label :"敷金：" %>
        <%= form.text_field :deposit, :placeholder => "(例)100000"  %>円
      </div>
      <br /> <br />
      <div class="gratuityfee">
        <%= form.label :"礼金：" %>
        <%= form.text_field :gratuityfee, :placeholder => "(例)100000"  %>円
      </div>
      <br /> <br />
       <div class="area">
        <%= form.label :"専有面積：" %>
        <%= form.text_field :area, :placeholder => "(例)50"  %>ｍ²
      </div>
      <br /> <br />
      <div class="age">
        <%= form.label :"築年数：" %>
        <%= form.text_field :age, :placeholder => "(例)5"  %>年
      </div>
      <br /> <br />
      <div class="layout">
        <%= form.label :"間取り：" %>
        <%= form.text_field :layout, :placeholder => "(例)1LDK"  %>
      </div>
      <br /> <br />
      <div class="lightning">
        <%= form.label :"主要採光面：" %>
        <%= form.text_field :lightning, :placeholder => "(例)南向き"  %>
      </div>
      <br /> <br />
      <div class="service">
        <%= form.label :"設備：" %>
        <%= form.text_field :service, :placeholder => "(例)バス・トイレ別"  %>
      </div>
      <br /> <br />
      <div class="hashtag">
        <%= form.label :"ハッシュタグ：" %>
        <%= form.text_field :hashtag, :placeholder => "(例)#おしゃれ"  %>
      </div>
      <br /> <br />
      <%= form.submit  "投稿する" , class: 'btn btn-success'%>
    <% end %>
    <%= link_to "もどる", houses_path , class: 'btn btn-warning'%>
  </div>
</div>

<script>
$(function() {
$('[placeholder]').ahPlaceholder({
    placeholderColor : 'silver',
    placeholderAttr : 'placeholder',
    likeApple : false
    });
});
</script>