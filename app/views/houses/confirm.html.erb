<head>
    <title>Osumosan</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="./font-awesome.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
</head>
<div class="top-wrapper">
  <div class="container">
    <h1>確認画面</h1><br>
    <h2>以下の内容でよろしいでしょうか？</h2><br>

    <%= form_with(model: @house, url: houses_path, local: true, method: 'post') do |form| %>
      <h3><%= form.hidden_field :title %></h3>
      <h3>物件名：<%= @house.title %></h3>
      <br>
      <%= image_tag(@house.image.url, :size => "500x500") %>
      <%= form.hidden_field :image_cache %>
      <br>
      <h3><%= form.hidden_field :location %></h3>
      <h3>所在地：<%= @house.location %></h3>
      <br>
      <h3><%= form.hidden_field :access %></h3>
      <h3>最寄り駅：<%= @house.access %>駅</h3>
      <br>
      <h3><%= form.hidden_field :rent %></h3>
      <h3>家賃：<%= @house.rent %>円</h3>
      <br>
      <h3><%= form.hidden_field :deposit %></h3>
      <h3>敷金：<%= @house.deposit %>円</h3>
      <br>
      <h3><%= form.hidden_field :gratuityfee %></h3>
      <h3>礼金：<%= @house.gratuityfee %>円</h3>
      <br>
      <h3><%= form.hidden_field :area %></h3>
      <h3>専有面積：<%= @house.area %>ｍ²</h3>
      <br>
      <h3><%= form.hidden_field :age %></h3>
      <h3>築年数：<%= @house.age %>年</h3>
      <br>
      <h3><%= form.hidden_field :layout %></h3>
      <h3>間取り：<%= @house.layout %></h3>
      <br>
      <h3><%= form.hidden_field :lightning %></h3>
      <h3>主要採光面：<%= @house.lightning %></h3>
      <br>
      <h3><%= form.hidden_field :service %></h3>
      <h3>設備：<%= @house.service %></h3>
      <br>
      <h3><%= form.hidden_field :hashtag %></h3>
      <h3>ハッシュタグ：<%= @house.hashtag %></h3>
      <br>
      <%= form.submit  "投稿する", class: 'btn btn-primary' %>
    <% end %>
    
    <%= form_with(model: @house, url: new_house_path, local: true, method: 'get') do |form| %>
      <h1><%= form.hidden_field :title %></h1>
      <h2><%= form.hidden_field :location %></h2>
      <h2><%= form.hidden_field :access %></h2>
      <h2><%= form.hidden_field :rent %></h2>
      <h2><%= form.hidden_field :deposit %></h2>
      <h2><%= form.hidden_field :gratuityfee %></h2>
      <h2><%= form.hidden_field :area %></h2>
      <h2><%= form.hidden_field :age %></h2>
      <h2><%= form.hidden_field :layout %></h2>
      <h2><%= form.hidden_field :lightning %></h2>
      <h2><%= form.hidden_field :service %></h2>
      <h2><%= form.hidden_field :hashtag %></h2>
      <%= form.submit "もどる", name: 'back', class: 'btn btn-secondary'%>
    <% end %>
    
  </div>
</div>