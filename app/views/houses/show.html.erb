<head>
    <title>Osumosan</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="./font-awesome.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
 </head>

<div class="top-wrapper">
  <div class="container">
      <div class="content">
        <h1>詳細画面</h1>
        <h2>物件名：<%= @house.title %></h2>
        <%= image_tag @house.image.url, :size => "500x500"%>
        <h2>所在地：<%= @house.location %></h2>
        <h2>最寄り駅：<%= @house.access %>駅</h2>
        <h2>家賃：<%= @house.rent %>円</h2>
        <h2>敷金：<%= @house.deposit %>円</h2>
        <h2>礼金：<%= @house.gratuityfee %>円</h2>
        <h2>専有面積：<%= @house.area %>ｍ²</h2>
        <h2>築年数：<%= @house.age %>年</h2>
        <h2>間取り：<%= @house.layout %></h2>
        <h2>主要採光面：<%= @house.lightning %></h2>
        <h2>設備：<%= @house.service %></h2>
        <h2>ハッシュタグ：<%= @house.hashtag %></h2>
      </div>
      <% if !Favorite.exists?(user_id:current_user.id,house_id: @house.id) %>
        <%= link_to "お気に入り",house_add_path(@house),method: :post %>
      <% else %>
        <%= link_to "お気に入り解除",house_add_path(@house),method: :delete %>
      <% end %>
      <%= link_to "お問い合わせ",contact_path, class: 'btn btn-warning'%>
      <%= link_to "もどる", houses_path , class: 'btn btn-warning'%>
  </div>
</div>
  
 <script>
    $("#methods-test2").click(function(){
    $(this).button('dispose').removeAttr('data-toggle');
  });
  </script>

 
